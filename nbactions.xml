                <exec.executable>java</exec.executable>
                <exec.appArgs>-c 127.0.0.1 --port=9990 -u admin -p admin123\$ profile</exec.appArgs>
                <exec.vmArgs></exec.vmArgs>
                <exec.mainClass>org.jboss.tfonteyne.profilecloner.Main</exec.mainClass>
            </properties>
        </action>
    </actions>
